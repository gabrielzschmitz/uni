% Cover
\newcommand{\cover}[9]{
	\begin{titlepage}
		\begin{center}
			\vspace*{2cm}
			\includegraphics[width=0.5\textwidth]{#1} \\ % University Logo
			\vfill
			\textbf{#2\\}  % Course Name
			\textbf{Prof.\ #3\\}  % Professor's Name
			\textbf{#4\\}  % Date
			\textbf{#5\space\##6\\}  % Homework Title and Number
			\vfill
			\textbf{#7\\}  % Student Name
			(RA:\ #8)\\
			\vfill
			\textit{Este documento foi criado usando \LaTeX\\
				\href{#9}{\textcolor{darkgray}{#9}}}. % Source Code
		\end{center}
	\end{titlepage}
}

% Question counter
\newcounter{questioncounter}
\setcounter{questioncounter}{0}
\newcounter{subquestioncounter}[questioncounter]

% Question environment with counter
\newcommand{\question}[1]{
	\stepcounter{questioncounter}
	\vspace{1em}
	\noindent\textbf{\thequestioncounter.} #1
	\vspace{0.5em}
	\newline
}

% Sub-question environment
\newcommand{\subquestion}[1]{
	\stepcounter{subquestioncounter}
	\vspace{0.5em}
	\noindent\textbf{(\alph{subquestioncounter})} #1
	\vspace{0.5em}
	\newline
}

% Answer environment
\newcommand{\answer}[1]{
	\vspace{0.5em}
	\noindent\textbf{Resposta:}\\
	\vspace*{-2em}
	\begin{quote}
		#1
	\end{quote}
}

% Demonstration environment
\newcommand{\demonstration}[1]{
	\vspace{0.5em}
	\noindent\textbf{Resposta:}\\
	\vspace*{-2em}
	\begin{quote}
		#1
		\hfill $\square$
	\end{quote}
}
